    <select id="getBoardListByBoardNum" resultType="ChBoard">
    <![CDATA[
    SELECT *
    FROM (
        SELECT *
        FROM chboard
        JOIN chboardcategory ON chboard.chnum = chboardcategory.chnum
        WHERE chboard.chnum = #{chnum}
        ORDER BY boardHeart DESC
    )
    WHERE ROWNUM <= 20
    ]]>
</select>


